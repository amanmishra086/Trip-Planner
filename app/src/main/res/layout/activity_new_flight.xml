<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trip.planner.NewFlightActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addFlight_textInputLayout_airline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_extra"
                android:layout_marginEnd="8dp"
                android:tag="airlineName">

                <AutoCompleteTextView
                    android:id="@+id/addFlight_textInputAutocomplete_airline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/newFlight_airline"
                    android:tag="airlineName"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addFlight_textInputLayout_flightNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="8dp"
                android:tag="flightNum">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/addFlight_textInputEditText_flightNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/newFlight_flightNum"
                    android:tag="flightNum"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_seats"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="seat">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_seats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/newFlight_seats"
                        android:tag="seat"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_confirmationNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="confirmationNum">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_confirmationNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirmation"
                        android:tag="confirmationNum"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/newFlight_departureDivider"
                android:textAllCaps="true" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addFlight_textInputLayout_departureCityAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_extra"
                android:layout_marginEnd="8dp"
                android:tag="departureCityAirport">

                <AutoCompleteTextView
                    android:id="@+id/addFlight_textInputAutocomplete_departureCityAirport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/newFlight_departureCityAirport"
                    android:tag="departureCityAirport"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_departureDate"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="departureDate">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_departureDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/newFlight_departureDate"
                        android:tag="departureDate"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_departureTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="departureTime">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_departureTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/newFlight_departureTime"
                        android:tag="departureTime"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_departureTerminal"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="departureTerminal">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_departureTerminal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/newFlight_departureTerm"
                        android:tag="departureTerminal"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_departureGate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="departureGate">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_departureGate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/newFlight_departureGate"
                        android:tag="departureGate"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/newFlight_arrivalDivider"
                android:textAllCaps="true" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addFlight_textInputLayout_arrivalCityAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_extra"
                android:layout_marginEnd="8dp"
                android:tag="arrivalCityAirport">

                <AutoCompleteTextView
                    android:id="@+id/addFlight_textInputAutocomplete_arrivalCityAirport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/newFlight_arrivalCityAirport"
                    android:tag="arrivalCityAirport"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_arrivalDate"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="arrivalDate">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_arrivalDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/newFlight_arrivalDate"
                        android:tag="arrivalDate"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_arrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="arrivalTime">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_arrivalTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/newFlight_arrivalTime"
                        android:tag="arrivalTime"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_arrivalTerminal"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="arrivalTerminal">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_arrivalTerminal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/newFlight_arrivalTerm"
                        android:tag="arrivalTerminal"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addFlight_textInputLayout_arrivalGate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="8dp"
                    android:tag="arrivalGate">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addFlight_textInputEditText_arrivalGate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/newFlight_arrivalGate"
                        android:tag="arrivalGate"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>